{
  "name": "pdf-editor",
  "version": "0.1.0",
  "description": "Cross-platform PDF editor with WYSIWYG editing â€” Electron + open-source libraries",
  "main": "dist/main/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.main.json && tsc -p tsconfig.preload.json && node scripts/bundle-preload.js && tsc -p tsconfig.renderer.json",
    "download:pdfium": "node scripts/download-pdfium.js",
    "build:native": "cd native/pdfium && node-gyp rebuild",
    "start": "npm run build && electron dist/main/index.js",
    "dev": "npm run build && electron dist/main/index.js --dev",
    "lint": "eslint src --ext .ts",
    "test": "jest",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "dist:mac": "electron-builder --mac",
    "dist:linux": "electron-builder --linux",
    "build:msi": "node scripts/build-msi.js"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.11.0",
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "electron-wix-msi": "^5.1.0",
    "esbuild": "^0.27.3",
    "node-gyp": "^12.2.0",
    "typescript": "^5.6.0"
  },
  "dependencies": {
    "electron-updater": "^6.3.0",
    "node-addon-api": "^8.0.0"
  },
  "build": {
    "appId": "com.pdfeditor.app",
    "productName": "PDF Editor",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "src/renderer/**/*.html",
      "src/renderer/**/*.css",
      "native/pdfium/build/Release/*"
    ],
    "asarUnpack": [
      "native/pdfium/build/Release/*"
    ],
    "extraResources": [
      {
        "from": "native/pdfium/build/Release/",
        "to": "native-addon",
        "filter": ["*.node", "*.dll", "*.so", "*.dylib"]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico",
      "signtoolOptions": {
        "publisherName": "PDF Editor"
      }
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "PDF Editor",
      "uninstallDisplayName": "PDF Editor"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "assets/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "category": "public.app-category.productivity"
    },
    "dmg": {
      "contents": [
        { "x": 130, "y": 220 },
        { "x": 410, "y": 220, "type": "link", "path": "/Applications" }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.png",
      "category": "Office"
    },
    "publish": null
  }
}
